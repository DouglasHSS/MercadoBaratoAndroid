<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.cdr.mercadobarato.activity.RegisterActivity">

    <include
        android:id="@+id/main_bar"
        layout="@layout/main_bar" />


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/name_field"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:roundedCorners="true" />


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/username_field_register"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/email_field"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/username_field_register"
        android:layout_below="@+id/username_field_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/password_field_register"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/email_field"
        android:layout_below="@+id/email_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/confirm_password"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/password_field_register"
        android:layout_below="@+id/password_field_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/confirm_password"
        android:layout_below="@+id/confirm_password"
        android:layout_marginTop="17dp"
        android:text="@string/register"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true" />

</RelativeLayout>

