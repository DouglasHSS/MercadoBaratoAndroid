<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_logo"
    tools:context="com.br.cdr.mercadobarato.activity.RegisterActivity">

    <include
        android:id="@+id/main_bar"
        layout="@layout/main_bar" />


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/main_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>


    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/username_field_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:layout_below="@+id/name_field"
        android:layout_centerHorizontal="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:roundedCorners="true"
        android:layout_below="@+id/username_field_register"
        android:layout_alignParentStart="true"
        app:bootstrapSize="lg"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/password_field_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:roundedCorners="true"
        android:layout_below="@+id/email_field"
        android:layout_alignParentEnd="true"
        app:bootstrapSize="lg"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/register"
        app:bootstrapBrand="success"
        app:buttonMode="regular"
        app:roundedCorners="true"
        android:layout_below="@+id/password_field_register"
        android:layout_centerHorizontal="true"
        app:bootstrapSize="xl"/>

</RelativeLayout>

