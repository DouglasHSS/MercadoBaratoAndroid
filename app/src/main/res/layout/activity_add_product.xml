<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.br.cdr.mercadobarato.AddProductActivity"
    android:weightSum="1">

    <include
        android:id="@+id/main_bar"
        layout="@layout/main_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_scan_barcode"
            android:layout_width="178dp"
            android:layout_height="46dp"
            android:text="@string/scan_barcode"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edit_product_code"
            android:layout_width="300dp"
            android:height="35dp"
            android:layout_height="wrap_content"
            app:bootstrapSize="md"
            app:bootstrapBrand="info"
            app:roundedCorners="true"
            android:hint="@string/product_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/btn_scan_barcode"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edit_product_price"
            android:layout_width="300dp"
            android:height="35dp"
            android:layout_height="wrap_content"
            app:bootstrapSize="md"
            app:bootstrapBrand="info"
            app:roundedCorners="true"
            android:hint="@string/product_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/edit_product_code"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edit_product_description"
            android:layout_width="300dp"
            android:height="100dp"
            android:layout_height="wrap_content"
            app:bootstrapSize="md"
            app:bootstrapBrand="info"
            app:roundedCorners="true"
            android:hint="@string/product_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/edit_product_price" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_save_product"
            android:layout_width="178dp"
            android:layout_height="46dp"
            android:text="@string/save_product"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:roundedCorners="true"
            android:layout_marginTop="15dp"
            android:layout_alignEnd="@id/edit_product_description"
            android:layout_below="@id/edit_product_description"
            />
    </RelativeLayout>
</LinearLayout>
